<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.mcknight.gfm13.personalmanager.BreakFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/titleColor"
                android:fontFamily="monospace"
                android:textSize="24sp"
                android:text="Rank: Newbie"
                android:id="@+id/rank"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/textColor"
                    android:fontFamily="monospace"
                    android:text="Points: XXX\nTo Next Rank: XXX"
                    android:id="@+id/pointDisplay"
                    android:textSize="16sp"/>
                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:max="100"
                    android:padding="10dp"
                    android:id="@+id/bar"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/titleColor"
                android:fontFamily="monospace"
                android:id="@+id/stats"
                android:text="Hours Worked: XXX\nTasks Finished: XX\nProjects Finished: XX"
                android:textSize="16sp"
                android:padding="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/achievements">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
